<%- model_class = Story -%>
<div class="page-header">
  <h1><%=t '.title', :default => Story %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
  
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stories.each do |story| %>
      <tr>
    
        <td><%= link_to(story.title,story) %></td>
        <td><%= render_content story.content %></td>
        <td><%= story.user.email %></td>
        <td><%=l story.created_at, format: :short %></td>
        <td>
          <%= link_to("Edit",edit_story_path(story), :class => 'btn btn-xs') %>

          <%= link_to "Delete", story_path(story), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }"%>
            
         
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_story_path,
            :class => 'btn btn-primary' %>
